    <script>
        var index = 0;
        var lbwidth = $('.scont').parent().width();
        var moveWidth = lbwidth / 2
        $(document).ready(function () {
            $('.conBody').height($(window).height() - 100)
            $(window).resize(function () {
                $('.conBody').height($(window).height() - 100)
            });

            console.log(lbwidth)
            $('.scont').width(lbwidth)
            $('.lb li').width(lbwidth / 2 - 10);
        });

        function lbPrev() {
            index--;
            console.log(lbwidth * index)
            if(index < 0){
                index =0
                return false
            }
            $(".lb").stop().animate({
                left: -lbwidth * index +'px'
            });
        }

        function lbNext() {
            console.log(index)
            index++
            if(index > $('.lb li').length/2-1){
                index = parseInt($('.lb li').length/2-1)
                return false
            }
            $(".lb").stop().animate({
                left: -lbwidth * index-12 + 'px'
            });
        }

    </script>
